<head>
  <% content_for :page_title, "Countries | Hotel Getaways" %>
</head>

<div class="container">
  <br>
  <h1 class="title has-text-centered mb-6">Welcome to Hotel Getaways!</h1>
  <p class="subtitle has-text-centered is-size-5">Your ultimate destination for hotel information</p>
  <br>

  <!-- Collection Navigation -->
  <h2 class="subtitle">Countries Collection</h2>
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>Flag</th>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @countries.each do |country| %>
        <tr>
          <!-- Display flag using flag-icon-css library -->
          <td><span class="flag-icon flag-icon-<%= country.country_code.downcase %>"></span></td>
          <td><%= country.name %></td>
          <td><%= country.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>